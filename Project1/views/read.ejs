<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div class="w-full h-full bg-zinc-900 text-white">
      <a class="text-blue-500" href="/">Back to Home</a>

      <h1 class="text-4xl font-semibold text-center mb-6 mt-10">All Users</h1>
      <div class="users flex gap-3 flex-wrap">
        
        <% users.forEach(function(user){ %>
        <div class="user w-62 p-4 bg-zinc-800 rounded-lg">
          <div class="w-full h-52 rounded-lg bg-red-500"><%= user.city%></div>
          <h3 class="text-xl mt-5 ml-5 tracking-tighter"><%= user.username%></h3>
          <h5 class="text-zinc-500"><%= user.email%></h5>
          <div class="flex gap-3 mt-10">
            <a class="text-zinc-600" href="">Edit User</a>
            <a class="text-red-500" href="">Delete User</a>
          </div>
        </div>
        <% }) %>

      </div>
    </div>
  </body>
</html>
